<%= render "shared/header" %>

<div class="mypage-main">
  <div class="mypage-contents">
    <h2 class="mypage-title">
      <%= current_user.nickname %>
    </h2>

    <hr class="hr1">
    
    <ul class='item-lists'>
      <% @exhibits.each do |exhibit| %>
        <li class='list'>
          <%= link_to exhibit_path(exhibit) do %>
          <div class='item-img-content'>
            <%= image_tag exhibit.image, class: "item-img" %>
            <% if @purchased_exhibits.include?(exhibit.id) %>
              <div class="sold-out">
                <span> Sold Out!! </span>
              </div>
            <% end %>
          </div>
          <div class='item-info'>
            <h3 class='item-name'>
              <%= exhibit.product %>
            </h3>
            <div class='item-price'>
              <span><%= exhibit.price %>円<br><%= exhibit.postage.name%></span>
              <div class='star-btn'>
                <%= image_tag "star.png", class:"star-icon" %>  
                <span class='star-count'>0</span>
              </div>
            </div>
          </div>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
<%= link_to new_exhibit_path, class: 'purchase-btn' do %>
  <span class='purchase-btn-text'>出品する</span>
  <%= image_tag 'icon_camera.png' , size: '185x50' ,class: "purchase-btn-icon" %>
<% end %>
<%= render "shared/footer" %>